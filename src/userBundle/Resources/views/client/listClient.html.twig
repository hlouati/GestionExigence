{% extends ['userBundle:dashboard:dashboard.html.twig']%}
    {% block Containtname %}
<br/>
            <a href="{{ path('Client_add')}}">
                <span>Ajouter un nouveau client </span></a>
            <span class="glyphicon glyphicon-pencil"></span>
            <br/><br/>
    {% endblock %}
    {% block Containt %}
      
        
              <table class="table table-condensed table-striped table-bordered table-hover no-margin">
    <thead>
      <tr>
        <th style="width:5%">
          <input class="no-margin" type="checkbox">
        </th>
        <th style="width:20%" class="hidden-phone">Raison social</th>
        <th style="width:10%" class="hidden-phone">Activité</th>
        <th style="width:15%" class="hidden-phone">Adresse</th>
        <th style="width:10%" class="hidden-phone">Téléphone</th>
        <th style="width:10%" class="hidden-phone">Email</th>
        <th style="width:10%" class="hidden-phone">Réprésentant</th>
        <th style="width:10%" class="hidden-phone">Action</th>
      </tr>
    </thead>
    <tbody>
        {% for c in client %}
      
        {%if c.adr is null%}<div class="alert alert-warning" role="alert">Vous avez pas encore des clients pensez à ajouter</div>{%endif%}    
        <tr>
        <td>
          <input class="no-margin" type="checkbox">
        </td>
        <td>
          <span class="name">{{c.rsocial}}</span>
        </td>
        <td class="hidden-phone">{{c.act}}</td>
        <td class="hidden-phone">
          {{c.adr}}
        </td>
        <td class="hidden-phone">{{c.tel}}</td>
        <td class="hidden-phone">{{c.email}}</td>
         <td class="hidden-phone">{{c.rep.getNom}} {{c.rep.getPrenom}}</td>
        <td class="hidden-phone">
          <div class="btn-group">
            <button data-toggle="dropdown" class="btn btn-xs dropdown-toggle" data-original-title="" title="">
              Action 
              <span class="caret">
              </span>
            </button>
            <ul class="dropdown-menu pull-right">
              <li>
                <a href="#">Supprimer</a>
              </li>
            </ul>
          </div>
        </td>
      </tr>
      {%endfor%}
        
    </tbody>
  </table>
       
        {% block modal%}
            {%endblock%}
        
 
        
        
        <script>
        $(document).ready(function(){
$("#mytable #checkall").click(function () {
        if ($("#mytable #checkall").is(':checked')) {
            $("#mytable input[type=checkbox]").each(function () {
                $(this).prop("checked", true);
            });

        } else {
            $("#mytable input[type=checkbox]").each(function () {
                $(this).prop("checked", false);
            });
        }
    });
    
    $("[data-toggle=tooltip]").tooltip();
});    
            
            
        </script>    
    {% endblock %}    
    
    
    