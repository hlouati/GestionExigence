{% extends ['userBundle:gestionUtilisateur:modal.html.twig']%}
{% block modal%}
    {% set listUser=''%} 
          <!-- Modal -->
          <script type="text/javascript" src="{{asset('js/jquery-1.10.2.js')}}"></script>
<script type="text/javascript" src="{{asset('js/bootstrap.min.js')}}"></script>
<link rel="stylesheet" type="text/css" href="{{asset('css/bootstrap.min.css')}}" >
<link rel="stylesheet" type="text/css" href="{{asset('css/bootstrap.css')}}" />
 <script type="text/javascript">
 $(document).ready(function() {
   $('#myModal').modal({
        show: true,
   })
 });
</script>
 <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-     labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <a href="{{ path('user_gestion')}}" class="close" >&times;</a>
         <h4 class="modal-title" id="myModalLabel">Ajouter client</h4>
       </div>
       <div class="modal-body">
       {% form_theme form '::formLayout.html.twig' %}
     
        <form method="post" {{ form_enctype(form) }}>
            
        <div class="row">
        <div class="col-sm-3"> {{ form_label(form.rsocial, "Raison Social:") }}</div>
        <div class="col-sm-6">  {{ form_widget(form.rsocial,{ 'attr': {'cols': '40','rows':'10'} }) }}</div>
           </div><br/>  
           
        <div class="row">
        <div class="col-sm-3">{{ form_label(form.adr, "Adresse :  :") }}</div>
        <div class="col-sm-6"> {{ form_widget(form.adr) }}</div>
        </div></br>
        <div class="row">
        <div class="col-sm-3"> {{ form_label(form.tel, "Téléphone :") }}</div>
        <div class="col-sm-6">  {{ form_widget(form.tel,{ 'attr': {'cols': '40','rows':'10'} }) }}</div>
        </div><br/>

        <div class="row">
        <div class="col-sm-3"> {{ form_label(form.email, "Email : :") }}</div>
        <div class="col-sm-6">  {{ form_widget(form.email,{ 'attr': {'cols': '40','rows':'10'} }) }}</div>
        </div><br/>
        
        <div class="row">
        <div class="col-sm-3"> {{ form_label(form.act, "Activité :") }}</div>
        <div class="col-sm-6">  {{ form_widget(form.act,{ 'attr': {'cols': '40','rows':'10'} }) }}</div>
        </div><br/>
        
           <div class="row">
        <div class="col-sm-3"> {{ form_label(form.rep, "Choisir un réprésentant :") }}</div>
        <div class="col-sm-6">  {{ form_widget(form.rep,{ 'attr': {'cols': '40','rows':'10'} }) }}</div>
         {{ form_errors(form.rep) }}
           </div>
   
     </div>
       <div class="modal-footer">
         <button type="submit" class="btn btn-primary">Ajouter</button>
         <a href="{{ path('Client_list')}}" class="btn btn-default">Fermer</a>
       </div>
       {{ form_rest(form) }} 
         </form>
     </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
 </div><!-- /.modal -->
    {% endblock %}
        


 

